@model CMCS.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - CMCS</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            gap: 20px;
        }

        .container {
            display: flex;
            gap: 20px;
            max-width: 1200px;
            width: 100%;
            align-items: flex-start;
        }

        .login-card {
            background: white;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            flex: 1;
            max-width: 550px;
        }

        .test-credentials-card {
            background: white;
            padding: 30px;
            border-radius: 16px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
            flex: 1;
            max-width: 500px;
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

            .login-header h1 {
                color: #1e3a8a;
                font-size: 2.5rem;
                font-weight: 700;
                margin-bottom: 8px;
            }

            .login-header p {
                color: #6b7280;
                font-size: 1rem;
            }

        .test-header {
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #e5e7eb;
        }

            .test-header h2 {
                color: #1e3a8a;
                font-size: 1.5rem;
                font-weight: 600;
                margin-bottom: 5px;
            }

            .test-header p {
                color: #6b7280;
                font-size: 0.9rem;
            }

        .alert-error {
            background: #fee2e2;
            color: #991b1b;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
            border-left: 4px solid #ef4444;
        }

        .alert-info {
            background: #dbeafe;
            color: #1e40af;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 15px;
            border-left: 4px solid #3b82f6;
            font-size: 0.9rem;
        }

        .role-buttons {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 10px;
            margin-bottom: 25px;
        }

        .role-btn {
            padding: 12px;
            border: 2px solid #d1d5db;
            border-radius: 8px;
            background: white;
            color: #374151;
            font-weight: 500;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.3s;
        }

            .role-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(59, 130, 246, 0.2);
            }

            .role-btn.active {
                background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
                color: white;
                border-color: #3b82f6;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                margin-bottom: 8px;
                color: #374151;
                font-weight: 500;
            }

        .form-control {
            width: 100%;
            padding: 12px;
            border: 1px solid #d1d5db;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s;
        }

            .form-control:focus {
                outline: none;
                border-color: #3b82f6;
                box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
            }

        .text-danger {
            color: #dc2626;
            font-size: 0.875rem;
            margin-top: 5px;
            display: block;
        }

        .btn-signin {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
        }

            .btn-signin:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(59, 130, 246, 0.4);
            }

        .login-footer {
            text-align: center;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #e5e7eb;
        }

            .login-footer p {
                color: #6b7280;
                font-size: 0.9rem;
                margin: 0;
            }

        .test-user {
            background: #f9fafb;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 12px;
            border-left: 4px solid #3b82f6;
            cursor: pointer;
            transition: all 0.2s;
        }

            .test-user:hover {
                background: #f3f4f6;
                transform: translateX(5px);
            }

            .test-user h3 {
                color: #1e3a8a;
                font-size: 1rem;
                font-weight: 600;
                margin-bottom: 8px;
            }

            .test-user .detail {
                display: flex;
                justify-content: space-between;
                margin-bottom: 4px;
                font-size: 0.85rem;
            }

                .test-user .detail .label {
                    color: #6b7280;
                    font-weight: 500;
                }

                .test-user .detail .value {
                    color: #374151;
                    font-family: 'Courier New', monospace;
                }

        .password-universal {
            background: #fef3c7;
            padding: 12px;
            border-radius: 8px;
            text-align: center;
            margin-bottom: 20px;
            border: 2px solid #f59e0b;
        }

            .password-universal strong {
                color: #92400e;
                font-size: 1.1rem;
            }

            .password-universal .password {
                font-family: 'Courier New', monospace;
                font-size: 1.2rem;
                color: #dc2626;
                font-weight: bold;
            }

        @@media (max-width: 1024px) {
            .container {
                flex-direction: column;
                align-items: center;
            }

            .test-credentials-card {
                max-width: 550px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- LOGIN FORM -->
        <div class="login-card">
            <div class="login-header">
                <h1>CMCS</h1>
                <p>Contract Monthly Claims System</p>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert-error">
                    @TempData["Error"]
                </div>
            }

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="role-buttons">
                    <button type="button" class="role-btn active" data-role="Lecturer">Lecturer</button>
                    <button type="button" class="role-btn" data-role="Coordinator">Coordinator</button>
                    <button type="button" class="role-btn" data-role="Manager">Manager</button>
                    <button type="button" class="role-btn" data-role="HR">HR</button>
                </div>
                <input type="hidden" asp-for="UserType" id="userTypeInput" value="Lecturer" />
                <span asp-validation-for="UserType" class="text-danger"></span>

                <div class="form-group">
                    <label asp-for="Email">Email Address</label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="Enter your email" id="emailInput" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" id="passwordInput" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-signin">Sign In</button>
            </form>

            <div class="login-footer">
                <p>Independent Institute of Education</p>
                <p>Secure Claims Management Portal</p>
            </div>
        </div>

        <!-- TEST CREDENTIALS -->
        <div class="test-credentials-card">
            <div class="test-header">
                <h2>🔑 Test Credentials</h2>
                <p>For markers & testing purposes - Click any user to auto-fill</p>
            </div>

            <div class="alert-info">
                <strong>ℹ️ Instructions:</strong> Click on any user card below to automatically fill the login form with their credentials.
            </div>

            <div class="password-universal">
                <strong>Universal Password:</strong>
                <div class="password">Password123!</div>
                <small style="color: #92400e;">(Same password for all test users)</small>
            </div>

            <div class="test-user" onclick="fillLogin('john.lecturer@iie.ac.za', 'Lecturer')">
                <h3>👨‍🏫 Lecturer - John</h3>
                <div class="detail">
                    <span class="label">Email:</span>
                    <span class="value">john.lecturer@iie.ac.za</span>
                </div>
                <div class="detail">
                    <span class="label">Role:</span>
                    <span class="value">Lecturer</span>
                </div>
                <div class="detail">
                    <span class="label">Hourly Rate:</span>
                    <span class="value">R450.00</span>
                </div>
            </div>

            <div class="test-user" onclick="fillLogin('sarah.davis@iie.ac.za', 'Lecturer')">
                <h3>👩‍🏫 Lecturer - Sarah</h3>
                <div class="detail">
                    <span class="label">Email:</span>
                    <span class="value">sarah.davis@iie.ac.za</span>
                </div>
                <div class="detail">
                    <span class="label">Role:</span>
                    <span class="value">Lecturer</span>
                </div>
                <div class="detail">
                    <span class="label">Hourly Rate:</span>
                    <span class="value">R420.00</span>
                </div>
            </div>

            <div class="test-user" onclick="fillLogin('jane.coordinator@iie.ac.za', 'Coordinator')">
                <h3>📋 Coordinator - Jane</h3>
                <div class="detail">
                    <span class="label">Email:</span>
                    <span class="value">jane.coordinator@iie.ac.za</span>
                </div>
                <div class="detail">
                    <span class="label">Role:</span>
                    <span class="value">Coordinator</span>
                </div>
                <div class="detail">
                    <span class="label">Function:</span>
                    <span class="value">Verify/Reject Claims</span>
                </div>
            </div>

            <div class="test-user" onclick="fillLogin('mike.manager@iie.ac.za', 'Manager')">
                <h3>💼 Manager - Mike</h3>
                <div class="detail">
                    <span class="label">Email:</span>
                    <span class="value">mike.manager@iie.ac.za</span>
                </div>
                <div class="detail">
                    <span class="label">Role:</span>
                    <span class="value">Manager</span>
                </div>
                <div class="detail">
                    <span class="label">Function:</span>
                    <span class="value">Approve/Reject Claims</span>
                </div>
            </div>

            <div class="test-user" onclick="fillLogin('emily.hr@iie.ac.za', 'HR')">
                <h3>👥 HR - Emily</h3>
                <div class="detail">
                    <span class="label">Email:</span>
                    <span class="value">emily.hr@iie.ac.za</span>
                </div>
                <div class="detail">
                    <span class="label">Role:</span>
                    <span class="value">HR</span>
                </div>
                <div class="detail">
                    <span class="label">Function:</span>
                    <span class="value">Manage Users & Reports</span>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Role selection functionality
        document.addEventListener('DOMContentLoaded', function() {
            const roleButtons = document.querySelectorAll('.role-btn');
            const userTypeInput = document.getElementById('userTypeInput');

            roleButtons.forEach(button => {
                button.addEventListener('click', function() {
                    roleButtons.forEach(btn => btn.classList.remove('active'));
                    this.classList.add('active');
                    userTypeInput.value = this.getAttribute('data-role');
                });
            });
        });

        // Auto-fill login credentials
        function fillLogin(email, role) {
            document.getElementById('emailInput').value = email;
            document.getElementById('passwordInput').value = 'Password123!';
            document.getElementById('userTypeInput').value = role;

            // Update active role button
            const roleButtons = document.querySelectorAll('.role-btn');
            roleButtons.forEach(btn => {
                btn.classList.remove('active');
                if (btn.getAttribute('data-role') === role) {
                    btn.classList.add('active');
                }
            });

            // Optional: Auto-submit after a short delay
            // setTimeout(() => document.querySelector('form').submit(), 500);
        }
    </script>
</body>
</html>
