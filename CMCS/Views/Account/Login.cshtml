@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - CMCS</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="login-container">
        <div class="card login-card">
            <div class="header">
                <h1>CMCS</h1>
                <p>Contract Monthly Claims System</p>
            </div>

            <form asp-action="Login" method="post">
                <div class="role-selector">
                    <button type="button" class="btn btn-role active" data-role="Lecturer">Lecturer</button>
                    <button type="button" class="btn btn-role" data-role="Coordinator">Coordinator</button>
                    <button type="button" class="btn btn-role" data-role="Manager">Manager</button>
                </div>

                <input type="hidden" name="role" id="selectedRole" value="Lecturer" />

                @if (ViewBag.ErrorMessage != null)
                {
                <div class="alert alert-danger">
                    @ViewBag.ErrorMessage
                </div>
                }

                <div class="form-group">
                    <label>Email Address</label>
                    <input type="email" name="email" class="form-control" placeholder="Enter your email" required />
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" placeholder="Enter your password" required />
                </div>

                <button type="submit" class="btn btn-primary btn-block">Sign In</button>
            </form>

            <p class="login-footer">
                Independent Institute of Education<br />
                Secure Claims Management Portal
            </p>
        </div>
    </div>

    <script>
        document.querySelectorAll('.btn-role').forEach(button => {
            button.addEventListener('click', function() {
                document.querySelectorAll('.btn-role').forEach(btn => btn.classList.remove('active'));
                this.classList.add('active');
                document.getElementById('selectedRole').value = this.dataset.role;
            });
        });
    </script>
</body>
</html>