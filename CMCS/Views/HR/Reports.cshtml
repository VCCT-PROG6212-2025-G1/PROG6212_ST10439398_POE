@model List<CMCS.Models.Claim>
@{
    ViewData["Title"] = "Claims Reports";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary">
                <i class="bi bi-file-earmark-pdf"></i> Claims Reports
            </h2>
            <p class="text-muted">Generate and download claims reports</p>
        </div>
    </div>

    <!-- Report Generation Options -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-range"></i> Generate Report</h5>
                </div>
                <div class="card-body">
                    <form asp-action="GenerateReport" method="post">
                        <div class="mb-3">
                            <label class="form-label">Report Type</label>
                            <select name="reportType" class="form-select">
                                <option value="all">All Approved Claims</option>
                                <option value="monthly">Monthly Report</option>
                                <option value="lecturer">By Lecturer</option>
                            </select>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Start Date</label>
                                <input type="date" name="startDate" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">End Date</label>
                                <input type="date" name="endDate" class="form-control" />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-download"></i> Download PDF Report
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-receipt"></i> Quick Actions</h5>
                </div>
                <div class="card-body">
                    <a asp-action="GenerateAllClaimsReport" class="btn btn-outline-primary mb-2 w-100">
                        <i class="bi bi-file-earmark-text"></i> Download All Claims Report
                    </a>
                    <a asp-action="GenerateMonthlyReport" class="btn btn-outline-success mb-2 w-100">
                        <i class="bi bi-calendar-month"></i> Download This Month's Report
                    </a>
                    <a asp-action="Invoices" class="btn btn-outline-info w-100">
                        <i class="bi bi-receipt"></i> Generate Invoices
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Summary Statistics -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="text-primary">@Model.Count</h3>
                    <p class="mb-0">Total Approved Claims</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="text-success">R @Model.Sum(c => c.TotalAmount).ToString("N2")</h3>
                    <p class="mb-0">Total Amount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="text-info">@Model.Sum(c => c.HoursWorked).ToString("N1")</h3>
                    <p class="mb-0">Total Hours</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-light">
                <div class="card-body text-center">
                    <h3 class="text-warning">@Model.Select(c => c.UserId).Distinct().Count()</h3>
                    <p class="mb-0">Unique Lecturers</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Approved Claims Table -->
    <div class="card">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="bi bi-table"></i> Approved Claims
            </h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Claim ID</th>
                                <th>Lecturer</th>
                                <th>Module</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total</th>
                                <th>Period</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>@claim.ClaimId</td>
                                    <td>@claim.User.FullName</td>
                                    <td>@(claim.Module?.ModuleName ?? "N/A")</td>
                                    <td>@claim.HoursWorked.ToString("N1")</td>
                                    <td>R @claim.HourlyRate.ToString("N2")</td>
                                    <td><strong>R @claim.TotalAmount.ToString("N2")</strong></td>
                                    <td>@claim.ClaimPeriod</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <th colspan="3">Total</th>
                                <th>@Model.Sum(c => c.HoursWorked).ToString("N1")</th>
                                <th>-</th>
                                <th>R @Model.Sum(c => c.TotalAmount).ToString("N2")</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-file-earmark-x display-4 text-muted"></i>
                    <p class="mt-2 text-muted">No approved claims found.</p>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>
