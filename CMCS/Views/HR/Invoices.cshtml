@model List<CMCS.Models.User>
@{
    ViewData["Title"] = "Generate Invoices";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="text-primary">
                <i class="bi bi-receipt"></i> Generate Invoices
            </h2>
            <p class="text-muted">Generate payment invoices for lecturers</p>
        </div>
    </div>

    <!-- Invoice Generation Options -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-person"></i> Individual Invoice</h5>
                </div>
                <div class="card-body">
                    <form asp-action="GenerateInvoice" method="post">
                        <div class="mb-3">
                            <label class="form-label">Select Lecturer</label>
                            <select name="lecturerId" class="form-select" required>
                                <option value="">-- Select Lecturer --</option>
                                @foreach (var lecturer in Model.Where(u => u.Role == "Lecturer"))
                                {
                                    <option value="@lecturer.UserId">@lecturer.FullName (@lecturer.Email)</option>
                                }
                            </select>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Period Start</label>
                                <input type="date" name="startDate" class="form-control" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Period End</label>
                                <input type="date" name="endDate" class="form-control" required />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-info">
                            <i class="bi bi-download"></i> Generate Invoice PDF
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-people"></i> Batch Invoices</h5>
                </div>
                <div class="card-body">
                    <form asp-action="GenerateBatchInvoices" method="post">
                        <div class="mb-3">
                            <label class="form-label">Invoice Period</label>
                            <select name="period" class="form-select">
                                <option value="current">Current Month</option>
                                <option value="previous">Previous Month</option>
                                <option value="custom">Custom Period</option>
                            </select>
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Start Date</label>
                                <input type="date" name="batchStartDate" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">End Date</label>
                                <input type="date" name="batchEndDate" class="form-control" />
                            </div>
                        </div>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-download"></i> Generate All Invoices (ZIP)
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Lecturers with Approved Claims -->
    <div class="card">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="bi bi-people"></i> Lecturers with Approved Claims
            </h5>
        </div>
        <div class="card-body">
            @{
                var lecturersWithClaims = Model.Where(u => u.Role == "Lecturer" && u.Claims.Any(c => c.CurrentStatus == CMCS.Models.ClaimStatus.Approved)).ToList();
            }
            @if (lecturersWithClaims.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Lecturer</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Hourly Rate</th>
                                <th>Approved Claims</th>
                                <th>Total Amount</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var lecturer in lecturersWithClaims)
                            {
                                var approvedClaims = lecturer.Claims.Where(c => c.CurrentStatus == CMCS.Models.ClaimStatus.Approved).ToList();
                                <tr>
                                    <td>@lecturer.FullName</td>
                                    <td>@lecturer.Email</td>
                                    <td>@(lecturer.Department ?? "N/A")</td>
                                    <td>R @lecturer.HourlyRate.ToString("N2")</td>
                                    <td>@approvedClaims.Count</td>
                                    <td><strong>R @approvedClaims.Sum(c => c.TotalAmount).ToString("N2")</strong></td>
                                    <td>
                                        <a asp-action="QuickInvoice" asp-route-id="@lecturer.UserId" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-receipt"></i> Quick Invoice
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-receipt display-4 text-muted"></i>
                    <p class="mt-2 text-muted">No lecturers with approved claims found.</p>
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>
</div>
