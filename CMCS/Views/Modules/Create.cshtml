@model CMCS.Models.Module
@{
    ViewData["Title"] = "Create Module";
}

<div class="container">
    <div class="card">
        <div class="header">
            <h1>Create New Module</h1>
            <p>Add a new course module to the system</p>
        </div>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="ModuleCode"></label>
                <input asp-for="ModuleCode" class="form-control" placeholder="e.g., PROG6212" />
                <span asp-validation-for="ModuleCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ModuleName"></label>
                <input asp-for="ModuleName" class="form-control" placeholder="e.g., Programming 2B" />
                <span asp-validation-for="ModuleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StandardHourlyRate"></label>
                <input asp-for="StandardHourlyRate" type="number" step="0.01" class="form-control" placeholder="e.g., 350.00" />
                <span asp-validation-for="StandardHourlyRate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Optional module description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>
                    <input asp-for="IsActive" type="checkbox" checked /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>

            <div style="display: flex; gap: 10px;">
                <button type="submit" class="btn btn-primary">Create Module</button>
                <a asp-action="Index" class="btn" style="background: #6b7280; color: white;">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}