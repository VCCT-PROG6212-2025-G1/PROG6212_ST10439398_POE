@model CMCS.Models.Module
@{
    ViewData["Title"] = "Edit Module";
}

<div class="container">
    <div class="card">
        <div class="header">
            <h1>Edit Module</h1>
            <p>Update module information</p>
        </div>

        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="ModuleId" />
            <input type="hidden" asp-for="CreatedDate" />

            <div class="form-group">
                <label asp-for="ModuleCode"></label>
                <input asp-for="ModuleCode" class="form-control" />
                <span asp-validation-for="ModuleCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ModuleName"></label>
                <input asp-for="ModuleName" class="form-control" />
                <span asp-validation-for="ModuleName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="StandardHourlyRate"></label>
                <input asp-for="StandardHourlyRate" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="StandardHourlyRate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>
                    <input asp-for="IsActive" type="checkbox" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>

            <div style="display: flex; gap: 10px;">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn" style="background: #6b7280; color: white;">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}