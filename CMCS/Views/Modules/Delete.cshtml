@model CMCS.Models.Module
@{
    ViewData["Title"] = "Delete Module";
}

<div class="container">
    <div class="card">
        <div class="header">
            <h1 style="color: #dc2626;">Delete Module</h1>
            <p>Are you sure you want to delete this module?</p>
        </div>

        <div class="alert alert-danger">
            <strong>Warning!</strong> This action cannot be undone.
        </div>

        <dl style="display: grid; grid-template-columns: 200px 1fr; gap: 15px; margin: 20px 0;">
            <dt style="font-weight: 600; color: #374151;">Module Code:</dt>
            <dd>@Model.ModuleCode</dd>

            <dt style="font-weight: 600; color: #374151;">Module Name:</dt>
            <dd>@Model.ModuleName</dd>

            <dt style="font-weight: 600; color: #374151;">Hourly Rate:</dt>
            <dd>R @Model.StandardHourlyRate.ToString("N2")</dd>

            <dt style="font-weight: 600; color: #374151;">Associated Claims:</dt>
            <dd>
                @if (Model.Claims != null && Model.Claims.Any())
                {
                <span style="color: #dc2626; font-weight: 600;">@Model.Claims.Count claims (Cannot delete!)</span>
                }
                else
                {
                <span>No associated claims</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="ModuleId" />
            <div style="display: flex; gap: 10px;">
                @if (Model.Claims == null || !Model.Claims.Any())
                {
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                }
                <a asp-action="Index" class="btn" style="background: #6b7280; color: white;">Cancel</a>
            </div>
        </form>
    </div>
</div>