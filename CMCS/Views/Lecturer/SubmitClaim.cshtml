@model CMCS.ViewModels.ClaimSubmissionViewModel
@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-file-earmark-plus"></i> Submit New Claim
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data" id="claimForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Auto-pulled Information (Read-only) -->
                        <div class="alert alert-info">
                            <h6><i class="bi bi-info-circle"></i> Your Information (Auto-populated by HR)</h6>
                            <div class="row mt-2">
                                <div class="col-md-4">
                                    <small class="text-muted">Name</small>
                                    <p class="mb-0 fw-bold">@ViewBag.UserName</p>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">Email</small>
                                    <p class="mb-0 fw-bold">@ViewBag.UserEmail</p>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">Hourly Rate</small>
                                    <p class="mb-0 fw-bold text-success">R @ViewBag.HourlyRate</p>
                                </div>
                            </div>
                        </div>

                        <!-- Hidden field for hourly rate -->
                        <input type="hidden" id="hourlyRate" value="@ViewBag.HourlyRateValue" />

                        <!-- Module Selection -->
                        <div class="mb-3">
                            <label asp-for="ModuleId" class="form-label">Module</label>
                            <select asp-for="ModuleId" asp-items="ViewBag.Modules" class="form-select">
                                <option value="">-- Select Module --</option>
                            </select>
                            <span asp-validation-for="ModuleId" class="text-danger"></span>
                        </div>

                        <!-- Hours Worked with Auto-calculation -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="HoursWorked" class="form-label">Hours Worked</label>
                                <input asp-for="HoursWorked" class="form-control" id="hoursWorked"
                                       type="number" step="0.5" min="0.5" max="180"
                                       placeholder="Enter hours (max 180)" />
                                <span asp-validation-for="HoursWorked" class="text-danger"></span>
                                <small class="text-muted">Maximum 180 hours per claim</small>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Calculated Total</label>
                                <div class="input-group">
                                    <span class="input-group-text">R</span>
                                    <input type="text" class="form-control fw-bold text-success"
                                           id="calculatedTotal" readonly value="0.00" />
                                </div>
                                <small class="text-muted">Auto-calculated: Hours × Hourly Rate</small>
                            </div>
                        </div>

                        <!-- Claim Period -->
                        <div class="mb-3">
                            <label asp-for="ClaimPeriod" class="form-label">Claim Period</label>
                            <input asp-for="ClaimPeriod" class="form-control" placeholder="e.g., October 2024" />
                            <span asp-validation-for="ClaimPeriod" class="text-danger"></span>
                        </div>

                        <!-- Notes -->
                        <div class="mb-3">
                            <label asp-for="AdditionalNotes" class="form-label">Additional Notes</label>
                            <textarea asp-for="AdditionalNotes" class="form-control" rows="3"
                                      placeholder="Any additional information about this claim..."></textarea>
                            <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
                        </div>

                        <!-- Supporting Documents -->
                        <div class="mb-3">
                            <label asp-for="SupportingDocuments" class="form-label">Supporting Documents</label>
                            <input asp-for="SupportingDocuments" class="form-control" type="file"
                                   accept=".pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg" multiple />
                            <span asp-validation-for="SupportingDocuments" class="text-danger"></span>
                            <small class="text-muted">
                                Accepted formats: PDF, Word, Excel, Images (Max 10MB each)
                            </small>
                        </div>

                        <!-- Summary Card -->
                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <h6 class="card-title">
                                    <i class="bi bi-calculator"></i> Claim Summary
                                </h6>
                                <div class="row">
                                    <div class="col-md-4">
                                        <small class="text-muted">Hours</small>
                                        <p class="mb-0 fw-bold" id="summaryHours">0</p>
                                    </div>
                                    <div class="col-md-4">
                                        <small class="text-muted">Rate</small>
                                        <p class="mb-0 fw-bold">R @ViewBag.HourlyRate</p>
                                    </div>
                                    <div class="col-md-4">
                                        <small class="text-muted">Total Amount</small>
                                        <p class="mb-0 fw-bold text-success fs-5" id="summaryTotal">R 0.00</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send"></i> Submit Claim
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Get hourly rate from hidden field
            var hourlyRate = parseFloat($('#hourlyRate').val()) || 0;

            // Function to calculate and update totals
            function calculateTotal() {
                var hours = parseFloat($('#hoursWorked').val()) || 0;

                // Validate hours
                if (hours < 0) hours = 0;
                if (hours > 180) {
                    hours = 180;
                    $('#hoursWorked').val(180);
                    alert('Maximum hours per claim is 180');
                }

                var total = hours * hourlyRate;

                // Update displays
                $('#calculatedTotal').val(total.toFixed(2));
                $('#summaryHours').text(hours.toFixed(1));
                $('#summaryTotal').text('R ' + total.toFixed(2));
            }

            // Calculate on input change
            $('#hoursWorked').on('input change', function() {
                calculateTotal();
            });

            // Also call API for validation (optional)
            $('#hoursWorked').on('blur', function() {
                var hours = parseFloat($(this).val()) || 0;
                if (hours > 0) {
                    // Optional: Call API to verify calculation
                    $.ajax({
                        url: '/api/v1/claims/calculate',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify({
                            userId: @ViewBag.UserId,
                            hoursWorked: hours
                        }),
                        success: function(response) {
                            if (response.success) {
                                $('#calculatedTotal').val(response.totalAmount.toFixed(2));
                                $('#summaryTotal').text('R ' + response.totalAmount.toFixed(2));
                            }
                        },
                        error: function() {
                            // Fallback to client-side calculation
                            calculateTotal();
                        }
                    });
                }
            });

            // Form validation before submit
            $('#claimForm').on('submit', function(e) {
                var hours = parseFloat($('#hoursWorked').val()) || 0;
                if (hours <= 0) {
                    e.preventDefault();
                    alert('Please enter valid hours worked');
                    return false;
                }
                if (hours > 180) {
                    e.preventDefault();
                    alert('Hours cannot exceed 180 per claim');
                    return false;
                }
                return true;
            });

            // Initial calculation
            calculateTotal();
        });
    </script>
}
