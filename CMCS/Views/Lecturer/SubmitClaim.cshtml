@model CMCS.ViewModels.ClaimSubmissionViewModel
@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-file-earmark-plus"></i> Submit New Claim
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="SubmitClaim" method="post" enctype="multipart/form-data" id="claimForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Auto-pulled Information -->
                        <div class="alert alert-info mb-4">
                            <h6 class="fw-bold mb-3"><i class="bi bi-info-circle"></i> Your Information (Auto-populated by HR)
                            </h6>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="text-muted small">Name</label>
                                    <p class="mb-0 fw-bold">@ViewBag.UserName</p>
                                </div>
                                <div class="col-md-6">
                                    <label class="text-muted small">Hourly Rate (Set by HR)</label>
                                    <p class="mb-0 fw-bold text-success fs-5">R @ViewBag.UserHourlyRate</p>
                                </div>
                            </div>
                        </div>

                        <input type="hidden" id="hourlyRate" value="@ViewBag.UserHourlyRate" />

                        <!-- Module Selection -->
                        <div class="mb-3">
                            <label asp-for="ModuleId" class="form-label fw-semibold">Module <span class="text-danger">*</span>
                            </label>
                            <select asp-for="ModuleId" asp-items="ViewBag.Modules" class="form-select" required>
                                <option value="">-- Select Module --</option>
                            </select>
                            <span asp-validation-for="ModuleId" class="text-danger small"></span>
                        </div>

                        <!-- Hours Worked -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="HoursWorked" class="form-label fw-semibold">Hours Worked <span
                                        class="text-danger">*</span></label>
                                <input asp-for="HoursWorked" class="form-control" id="hoursWorked"
                                       type="number" step="0.5" min="0.5" max="180"
                                       placeholder="Enter hours (max 180)" required />
                                <span asp-validation-for="HoursWorked" class="text-danger small"></span>
                                <small class="form-text text-muted">Maximum 180 hours per claim</small>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Calculated Total</label>
                                <div class="input-group">
                                    <span class="input-group-text">R</span>
                                    <input type="text" class="form-control fw-bold text-success fs-5"
                                           id="calculatedTotal" readonly value="0.00" />
                                </div>
                                <small class="form-text text-muted">Auto-calculated: Hours × Hourly Rate</small>
                            </div>
                        </div>

                        <!-- Claim Period -->
                        <div class="mb-3">
                            <label asp-for="ClaimPeriod" class="form-label fw-semibold">Claim Period <span
                                    class="text-danger">*</span></label>
                            <input asp-for="ClaimPeriod" class="form-control" placeholder="e.g., October 2024" required />
                            <span asp-validation-for="ClaimPeriod" class="text-danger small"></span>
                        </div>

                        <!-- Notes -->
                        <div class="mb-3">
                            <label asp-for="AdditionalNotes" class="form-label fw-semibold">Additional Notes</label>
                            <textarea asp-for="AdditionalNotes" class="form-control" rows="3"
                                      placeholder="Any additional information about this claim..."></textarea>
                            <span asp-validation-for="AdditionalNotes" class="text-danger small"></span>
                        </div>

                        <!-- Supporting Documents -->
                        <div class="mb-4">
                            <label asp-for="SupportingDocuments" class="form-label fw-semibold">Supporting Documents</label>
                            <input asp-for="SupportingDocuments" class="form-control" type="file"
                                   accept=".pdf,.doc,.docx,.xls,.xlsx" multiple />
                            <span asp-validation-for="SupportingDocuments" class="text-danger small"></span>
                            <small class="form-text text-muted">
                                Accepted formats: PDF, Word, Excel (Max 10MB each)
                            </small>
                        </div>

                        <!-- Summary Card -->
                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <h6 class="card-title fw-bold mb-3">
                                    <i class="bi bi-calculator"></i> Claim Summary
                                </h6>
                                <div class="row text-center">
                                    <div class="col-md-4">
                                        <small class="text-muted d-block">Hours</small>
                                        <p class="mb-0 fw-bold fs-4" id="summaryHours">0</p>
                                    </div>
                                    <div class="col-md-4">
                                        <small class="text-muted d-block">Rate</small>
                                        <p class="mb-0 fw-bold fs-4">R @ViewBag.UserHourlyRate</p>
                                    </div>
                                    <div class="col-md-4">
                                        <small class="text-muted d-block">Total Amount</small>
                                        <p class="mb-0 fw-bold text-success fs-3" id="summaryTotal">R 0.00</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="d-flex justify-content-between">
                            <a asp-action="Dashboard" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-send"></i> Submit Claim
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            console.log('Submit Claim JavaScript Loaded');
            
            // Get hourly rate from hidden input
            var hourlyRateValue = $('#hourlyRate').val();
            var hourlyRate = parseFloat(hourlyRateValue) || 0;
            
            console.log('Hourly Rate from ViewBag:', hourlyRateValue);
            console.log('Parsed Hourly Rate:', hourlyRate);

            // Check if hourly rate is 0
            if (hourlyRate === 0) {
                console.error('WARNING: Hourly rate is 0! Check if user has an hourly rate set by HR.');
                alert('Your hourly rate is not set. Please contact HR to set your hourly rate before submitting claims.');
            }

            function calculateTotal() {
                console.log('calculateTotal() called');
                
                var hoursValue = $('#hoursWorked').val();
                var hours = parseFloat(hoursValue) || 0;
                
                console.log('Hours input value:', hoursValue);
                console.log('Parsed hours:', hours);

                // Validate hours
                if (hours < 0) {
                    hours = 0;
                    $('#hoursWorked').val(0);
                }
                
                if (hours > 180) {
                    hours = 180;
                    $('#hoursWorked').val(180);
                    alert('Maximum hours per claim is 180');
                }

                // Calculate total
                var total = hours * hourlyRate;
                
                console.log('Calculation: ' + hours + ' × ' + hourlyRate + ' = ' + total);

                // Update display fields
                $('#calculatedTotal').val(total.toFixed(2));
                $('#summaryHours').text(hours.toFixed(1));
                $('#summaryTotal').text('R ' + total.toFixed(2));
                
                console.log('Display updated - Total: R' + total.toFixed(2));
            }

            // Bind event handlers
            $('#hoursWorked').on('input change keyup blur', function() {
                console.log('Hours input changed');
                calculateTotal();
            });

            // Form validation
            $('#claimForm').on('submit', function(e) {
                var hours = parseFloat($('#hoursWorked').val()) || 0;
                
                if (hours <= 0) {
                    e.preventDefault();
                    alert('Please enter valid hours worked (greater than 0)');
                    $('#hoursWorked').focus();
                    return false;
                }
                
                if (hours > 180) {
                    e.preventDefault();
                    alert('Hours cannot exceed 180 per claim');
                    $('#hoursWorked').focus();
                    return false;
                }
                
                // Check if ModuleId is selected
                var moduleId = $('#ModuleId').val();
                if (!moduleId || moduleId === '') {
                    e.preventDefault();
                    alert('Please select a module');
                    $('#ModuleId').focus();
                    return false;
                }
                
                console.log('Form validation passed - submitting');
                return true;
            });

            // Initial calculation on page load
            console.log('Running initial calculation');
            calculateTotal();
            
            // Set focus on hours input
            setTimeout(function() {
                $('#hoursWorked').focus();
            }, 500);
        });
    </script>
}
