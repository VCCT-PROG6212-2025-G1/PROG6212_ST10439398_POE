@model CMCS.ViewModels.LecturerDashboardViewModel
@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container">
    <div class="card">
        <div class="header">
            <h1>Lecturer Dashboard</h1>
            <p>Manage your monthly claims efficiently and transparently</p>
        </div>

        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-value">@Model.PendingClaims</div>
                <div class="stat-label">Pending Claims</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">R@Model.MonthlyTotal.ToString("N2")</div>
                <div class="stat-label">This Month Total</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">R@Model.YearToDate.ToString("N2")</div>
                <div class="stat-label">Year to Date</div>
            </div>
            <div class="stat-card">
                <div class="stat-value">@Model.ClaimsThisMonth</div>
                <div class="stat-label">Claims This Month</div>
            </div>
        </div>

        <h2>Quick Actions</h2>
        <div class="action-grid">
            <a href="@Url.Action("SubmitClaim", "Lecturer")" class="action-card">
                <i>📝</i>
                <h3>Submit New Claim</h3>
                <p>Create and submit a new monthly claim</p>
            </a>
            <a href="@Url.Action("ClaimHistory", "Lecturer")" class="action-card">
                <i>📊</i>
                <h3>View Claim History</h3>
                <p>Track status of all your claims</p>
            </a>
            <div class="action-card">
                <i>📎</i>
                <h3>Upload Documents</h3>
                <p>Add supporting documents to claims</p>
            </div>
            <div class="action-card">
                <i>⚙️</i>
                <h3>Account Settings</h3>
                <p>Update your profile and preferences</p>
            </div>
        </div>

        <h2>Recent Claims</h2>
        <div class="table-responsive">
            <table>
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Module</th>
                        <th>Hours</th>
                        <th>Amount</th>
                        <th>Status</th>
                        <th>Date Submitted</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.RecentClaims != null && Model.RecentClaims.Any())
                    {
                    @foreach (var claim in Model.RecentClaims)
                        {
                    <tr>
                        <td>CLC-@claim.ClaimId.ToString("D4")</td>
                        <td>@claim.Module.ModuleCode</td>
                        <td>@claim.HoursWorked</td>
                        <td>R@claim.TotalAmount.ToString("N2")</td>
                        <td>
                            <span class="badge badge-@(claim.CurrentStatus.ToString().ToLower())">
                                @claim.CurrentStatus
                            </span>
                        </td>
                        <td>@claim.SubmissionDate.ToString("dd MMM yyyy")</td>
                    </tr>
                        }
                    }
                    else
                    {
                    <tr>
                        <td colspan="6" style="text-align: center;">No claims found</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>