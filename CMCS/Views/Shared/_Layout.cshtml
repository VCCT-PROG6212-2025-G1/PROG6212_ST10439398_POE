<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="nav-container">
                <div class="nav-left">
                    <a asp-controller="Home" asp-action="Index" class="nav-brand">CMCS</a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Lecturer"))
                        {
                            <div class="nav-links">
                                <a asp-controller="Lecturer" asp-action="Dashboard" class="nav-link">Dashboard</a>
                                <a asp-controller="Lecturer" asp-action="SubmitClaim" class="nav-link">Submit Claim</a>
                                <a asp-controller="Lecturer" asp-action="ClaimHistory" class="nav-link">Claim History</a>
                            </div>
                        }
                        else if (User.IsInRole("Coordinator"))
                        {
                            <div class="nav-links">
                                <a asp-controller="Coordinator" asp-action="Dashboard" class="nav-link">Dashboard</a>
                                <a asp-controller="Modules" asp-action="Index" class="nav-link">Modules</a>
                            </div>
                        }
                        else if (User.IsInRole("Manager"))
                        {
                            <div class="nav-links">
                                <a asp-controller="Manager" asp-action="Dashboard" class="nav-link">Dashboard</a>
                                <a asp-controller="Modules" asp-action="Index" class="nav-link">Modules</a>
                            </div>
                        }
                        else if (User.IsInRole("HR"))
                        {
                            <div class="nav-links">
                                <a asp-controller="HR" asp-action="Dashboard" class="nav-link">Dashboard</a>
                            </div>
                        }
                    }
                </div>

                <div class="nav-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="AccountSettings" asp-action="Index" class="nav-settings">
                            <span class="settings-icon">⚙️</span>
                            <span class="settings-text">Account Settings</span>
                        </a>
                        <span class="nav-welcome">Welcome, @User.Identity.Name</span>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn-logout">Logout</button>
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login" class="btn-login">Login</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                <strong>✓</strong> @TempData["Success"]
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-error">
                <strong>✗</strong> @TempData["Error"]
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning">
                <strong>⚠</strong> @TempData["Warning"]
            </div>
        }

        @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-content">
            <p>&copy; @DateTime.Now.Year - Contract Monthly Claim System - Independent Institute of Education</p>
        </div>
    </footer>

    <!-- jQuery - CRITICAL for calculations -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Page specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<!--------------------- End of File ------------------------->
